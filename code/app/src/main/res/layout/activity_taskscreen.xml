<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tasklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Buying Textbooks"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#00666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_button_white_40dp"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Please select an option you want to perform."
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasklabel" />

    <!--    <TextView-->
    <!--        android:id="@+id/explanation"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="23dp"-->
    <!--        android:text="You are midway through the term and you have yet to purchase your textbooks"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/home" />-->

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/option1"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:background="#00666666"
        app:srcCompat="@drawable/ic_amazon_btn_350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="Buy from Amazon \n $100"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/option1"
        app:layout_constraintTop_toTopOf="@+id/option1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option1_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/option1_label"
        app:layout_constraintTop_toBottomOf="@+id/option1_label"
        app:srcCompat="@drawable/ic_academics_35dp" />

    <TextView
        android:id="@+id/option1_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+20 points"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/option1_icon"
        app:layout_constraintStart_toEndOf="@+id/option1_icon"
        app:layout_constraintTop_toTopOf="@+id/option1_icon" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/option2"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#00666666"
        app:srcCompat="@drawable/ic_online_pdf_btn_350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <TextView
        android:id="@+id/option2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Download online PDFs \n $0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/option2"
        app:layout_constraintTop_toTopOf="@+id/option2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option2_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/option2_label"
        app:layout_constraintTop_toBottomOf="@+id/option2_label"
        app:srcCompat="@drawable/ic_academics_35dp" />

    <TextView
        android:id="@+id/option2_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10 points"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/option2_icon"
        app:layout_constraintStart_toEndOf="@+id/option2_icon"
        app:layout_constraintTop_toTopOf="@+id/option2_icon" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/option3"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#00666666"
        app:srcCompat="@drawable/ic_friend_btn_350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <TextView
        android:id="@+id/option3_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="Borrow from Friends \n $0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/option3"
        app:layout_constraintTop_toTopOf="@+id/option3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option3_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/option3_label"
        app:layout_constraintTop_toBottomOf="@+id/option3_label"
        app:srcCompat="@drawable/ic_academics_35dp" />

    <TextView
        android:id="@+id/option3_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10 points"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/option3_icon"
        app:layout_constraintStart_toEndOf="@+id/option3_icon"
        app:layout_constraintTop_toTopOf="@+id/option3_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option3_icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/option3_icon"
        app:layout_constraintTop_toBottomOf="@+id/option3_icon"
        app:srcCompat="@drawable/ic_social_life_35dp" />

    <TextView
        android:id="@+id/option3_points2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5 points"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/option3_icon2"
        app:layout_constraintStart_toEndOf="@+id/option3_icon2"
        app:layout_constraintTop_toTopOf="@+id/option3_icon2" />


</androidx.constraintlayout.widget.ConstraintLayout>