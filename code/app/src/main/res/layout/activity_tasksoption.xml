<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_books_option_150dp" />

                <TextView
                    android:id="@+id/textbook_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task1"
                    android:layout_alignEnd="@+id/task1"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy Textbooks" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@+id/task1"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_equipment_option_150dp" />

                <TextView
                    android:id="@+id/equipment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task2"
                    android:layout_alignEnd="@+id/task2"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy Equipment" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_supplies_option_150dp" />

                <TextView
                    android:id="@+id/supplies_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task3"
                    android:layout_alignEnd="@+id/task3"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy Supplies" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@+id/task3"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_tutor_option_150dp" />

                <TextView
                    android:id="@+id/tutor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task4"
                    android:layout_alignEnd="@+id/task4"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Pay for Tutoring" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_laptop_option_150dp" />

                <TextView
                    android:id="@+id/laptop_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task5"
                    android:layout_alignEnd="@+id/task5"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy New Laptop" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@+id/task5"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_desk_chair_option_150dp" />

                <TextView
                    android:id="@+id/desk_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task6"
                    android:layout_alignEnd="@+id/task6"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy Desk/Chair" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_tablet_option_150dp" />

                <TextView
                    android:id="@+id/tablet_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task7"
                    android:layout_alignEnd="@+id/task7"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Buy New Tablet" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/task8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@+id/task7"
                    android:background="#00666666"
                    app:srcCompat="@drawable/ic_tuition_option_150dp" />

                <TextView
                    android:id="@+id/tuition_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/task8"
                    android:layout_alignEnd="@+id/task8"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="Pay for Tuition" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

