    <TextView
        android:id="@+id/learning2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="a comprehensive physical examination brings you a more stable health guarantee."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageRectangle2"
        app:layout_constraintEnd_toEndOf="@id/imageRectangle2"
        app:layout_constraintStart_toEndOf="@+id/imageBullet2"
        app:layout_constraintTop_toBottomOf="@+id/imageRectangle2" />

