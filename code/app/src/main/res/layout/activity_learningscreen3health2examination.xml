        app:layout_constraintBottom_toBottomOf="@+id/imageRectangle3"
        app:layout_constraintStart_toStartOf="@+id/imageRectangle3"
        app:layout_constraintTop_toTopOf="@+id/imageRectangle3"
        app:srcCompat="@drawable/ic_learningpoint_3" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_effect_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home_yellow" />


