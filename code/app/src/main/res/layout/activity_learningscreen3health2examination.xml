        app:layout_constraintTop_toTopOf="@+id/imageRectangle1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBullet1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageRectangle1"
        app:layout_constraintStart_toStartOf="@+id/imageRectangle1"
        app:layout_constraintTop_toTopOf="@+id/imageRectangle1"
        app:srcCompat="@drawable/ic_learningpoint_1" />

    <androidx.appcompat.widget.AppCompatImageView
