<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_red_350dp"   />

    <EditText
        android:id="@+id/editText_Name"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Name" />

    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/button_effect"
        android:text="Sign In"
        android:textColor="@color/darkGray"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMoney"
        android:layout_width="161dp"
        android:layout_height="29dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="600dp"
        android:text="Donâ€™t have an account? "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="94dp"
        android:layout_height="29dp"
        android:background="@drawable/button_effect"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#00B0FF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMoney"
        app:layout_constraintStart_toEndOf="@+id/textViewMoney"
        app:layout_constraintTop_toTopOf="@+id/textViewMoney" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Fun, Exciting, College Simulation, and Financial Learning!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/mainColorTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>